<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Completion\nRate"
        android:padding="5dp"
        android:id="@+id/textView_completionRateText"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowSpan="2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="XXX%"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:id="@+id/textView_completionRate"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Completions:"
        android:id="@+id/textView_completionText"
        android:layout_row="0"
        android:layout_column="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="XXX"
        android:textColor="@color/white"
        android:id="@+id/textView_completionNum"
        android:layout_row="0"
        android:layout_column="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Days Fulfilled:"
        android:id="@+id/textView_fulfilledText"
        android:layout_row="1"
        android:layout_column="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="XXX"
        android:textColor="@color/white"
        android:id="@+id/textView_fulfilledNum"
        android:layout_row="1"
        android:layout_column="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Days Missed:"
        android:id="@+id/textView_completedText"
        android:layout_row="2"
        android:layout_column="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="XXX"
        android:textColor="@color/white"
        android:id="@+id/textView_missedNum"
        android:layout_row="2"
        android:layout_column="3" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/relativeLayout_dotwLayout"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <ToggleButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textOn="S"
            android:textOff="S"
            android:textSize="30sp"
            android:id="@+id/toggleButton_sunday"
            android:background="?selectableItemBackground"
            android:textColor="@drawable/dotw_toggle"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/toggleButton_monday" />

        <ToggleButton
            android:layout_width="@dimen/SMTWTFS_width"
            android:layout_height="@dimen/SMTWTFS_height"
            android:textOn="M"
            android:textOff="M"
            android:textSize="30sp"
            android:id="@+id/toggleButton_monday"
            android:background="?selectableItemBackground"
            android:textColor="@drawable/dotw_toggle"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/toggleButton_tuesday" />

        <ToggleButton
            android:layout_width="@dimen/SMTWTFS_width"
            android:layout_height="@dimen/SMTWTFS_height"
            android:textOn="T"
            android:textOff="T"
            android:textSize="30sp"
            android:id="@+id/toggleButton_tuesday"
            android:background="?selectableItemBackground"
            android:textColor="@drawable/dotw_toggle"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/toggleButton_wednesday" />

        <ToggleButton
            android:layout_width="@dimen/SMTWTFS_width"
            android:layout_height="@dimen/SMTWTFS_height"
            android:textOn="W"
            android:textOff="W"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/toggleButton_wednesday"
            android:background="?selectableItemBackground"
            android:textColor="@drawable/dotw_toggle"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true" />

        <ToggleButton
            android:layout_width="@dimen/SMTWTFS_width"
            android:layout_height="@dimen/SMTWTFS_height"
            android:textOn="T"
            android:textOff="T"
            android:textSize="30sp"
            android:id="@+id/toggleButton_thursday"
            android:background="?selectableItemBackground"
            android:textColor="@drawable/dotw_toggle"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/toggleButton_wednesday" />

        <ToggleButton
            android:layout_width="@dimen/SMTWTFS_width"
            android:layout_height="@dimen/SMTWTFS_height"
            android:textOn="F"
            android:textOff="F"
            android:textSize="30sp"
            android:id="@+id/toggleButton_friday"
            android:background="?selectableItemBackground"
            android:textColor="@drawable/dotw_toggle"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/toggleButton_thursday" />

        <ToggleButton
            android:layout_width="@dimen/SMTWTFS_width"
            android:layout_height="@dimen/SMTWTFS_height"
            android:textOn="S"
            android:textOff="S"
            android:textSize="30sp"
            android:id="@+id/toggleButton_saturday"
            android:background="?selectableItemBackground"
            android:textColor="@drawable/dotw_toggle"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/toggleButton_friday" />
    </RelativeLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_ofHabit"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="4" />

</GridLayout>
